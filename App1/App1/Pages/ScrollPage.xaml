<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Pages.ScrollPage">
  
<ListView ItemsSource="{Binding UserNotes}" ItemSelected="ListView_OnItemSelected"
          x:Name="listView">
  <ListView.ItemTemplate>
<DataTemplate >
  <ViewCell>
  <AbsoluteLayout>
    <Label Text="{Binding NoteTextPreview}"
           FontSize="21"
           TextColor="#3B3A3A"
           AbsoluteLayout.LayoutBounds="0,0,1,1"
           AbsoluteLayout.LayoutFlags="All" />
    <Label Text="{Binding CreationTimePreview}" 
           FontSize="12"
           TextColor="Gray"
           AbsoluteLayout.LayoutBounds="1,0,0.1,1"
           AbsoluteLayout.LayoutFlags="All" />
    </AbsoluteLayout>
  
  </ViewCell>

</DataTemplate>  
</ListView.ItemTemplate>
</ListView>
</ContentPage>